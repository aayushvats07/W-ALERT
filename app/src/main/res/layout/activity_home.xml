<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    tools:context=".HomeActivity">

  <include
    layout="@layout/appbarforhomeactivty"/>

  <ImageView
      android:id="@+id/imgbtn1"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/ic_call"
      android:clickable="true"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="30dp"/>
  <TextView
      android:id="@+id/txt8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgbtn1"
      android:layout_marginLeft="65dp"
      android:layout_marginTop="20dp"
      android:text="Call"
      android:textColor="#000000"
      android:textSize="20sp" />

  <ImageView
      android:id="@+id/imgbtn2"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/ic_emregency_contact"
      android:clickable="true"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="280dp"/>
  <TextView
      android:id="@+id/txt9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgbtn1"
      android:text="Emergency"
      android:textColor="#000000"
      android:textSize="20sp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="280dp"/>


  <ImageView
      android:id="@+id/imgbtn4"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/ic_camera"
      android:onClick="takepicture"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="280dp"
      android:layout_below="@+id/imgbtn2"/>
  <TextView
      android:id="@+id/txt11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgbtn1"
      android:text="Camera"
      android:textColor="#000000"
      android:textSize="20sp"
      android:layout_marginLeft="295dp"
      android:layout_marginTop="220dp"/>


  <ImageView
      android:id="@+id/imgbtn5"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/ic_video"
      android:clickable="true"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="30dp"
      android:layout_below="@+id/imgbtn1"/>
  <TextView
      android:id="@+id/txt12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgbtn1"
      android:text="Self-Defence Videos"
      android:textColor="#000000"
      android:textSize="20sp"
      android:layout_marginLeft="6dp"
      android:layout_marginTop="220dp"/>

  <ImageView
      android:id="@+id/video_capture"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/ic_videocapture"
      android:clickable="true"
      android:onClick="videocapture"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="30dp"
      android:layout_below="@+id/imgbtn4"/>
  <TextView
      android:id="@+id/txt13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgbtn1"
      android:text="Video Capture"
      android:textColor="#000000"
      android:textSize="20sp"
      android:layout_marginLeft="6dp"
      android:layout_marginTop="400dp"/>

  <Button
      android:id="@+id/btn6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgbtn4"
      android:layout_marginTop="120dp"
      android:text="Send Location"
      android:textSize="20sp"
      android:layout_marginLeft="220dp"
      android:backgroundTint="@color/white"/>
</RelativeLayout>